{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 300,
  "height": 300,
  "title": "GDP per capita vs Life expectancy 2020",
  "description": "A scatterplot showing horsepower and miles per gallons for various cars.",
  "data": {
    "url": "https://raw.githubusercontent.com/BrianMwangi74/FIT3179_A2/master/data/gdp_lifeExpectancy.json"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "selection": {
    "continent_highlight": {
      "type": "multi",
      "fields": ["Continent"],
      "bind": "legend"
    }
  },
  "mark": "circle",
  "encoding": {
    "x": {"field": "GDP per capita", "type": "quantitative"},
    "y": {
      "field": "Life expectancy",
      "type": "quantitative",
      "axis": {"tickCount": 10},
      "scale": {"type": "linear", "domain": [40, 90]}
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": {
        "domain": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "range": [
          "#e41a1c",
          "#984ea3",
          "#ff7f00",
          "#26B6E6",
          "#377eb8",
          "#a65628"
        ]
      }
    },
    "opacity": {
      "condition": {"selection": "continent_highlight", "value": 1},
      "value": 0.15
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Continent", "type": "nominal"},
      {"field": "GDP per capita", "type": "quantitative"},
      {"field": "Life expectancy", "type": "quantitative"}
    ]
  },
  "config": {}
}
